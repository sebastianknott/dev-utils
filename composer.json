{
    "name": "sebastianknott/dev-utils",
    "description": "This is a collection of stuff I need for developing.",
    "type": "library",
    "authors": [
        {
            "name": "Sebastian Knott",
            "email": "sebastian@sebastianknott.de"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-ast": "*",
        "ext-igbinary": "*",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "squizlabs/php_codesniffer": "^3.5",
        "phpmd/phpmd": "^2.8",
        "sebastian/phpcpd": "^4.0 || ^5.0",
        "phpmetrics/phpmetrics": "^2.7",
        "phpunit/phpunit": "^7.0 || ^8.0 || ^9.0",
        "slevomat/coding-standard": "^6.3",
        "phpstan/phpstan": "^0.12.33",
        "sebastianknott/hamcrest-object-accessor": "^1.0",
        "hamcrest/hamcrest-php": "^2.0",
        "mockery/mockery": "^1.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "phpstan/phpstan-phpunit": "^0.12.13",
        "phpstan/phpstan-doctrine": "^0.12.19",
        "phpstan/phpstan-deprecation-rules": "^0.12.5",
        "bamarni/composer-bin-plugin": "^1.4",
        "phake/phake": "^3.1",
        "phan/phan": "^2.7 || ^3.1",
        "deployer/deployer": "^6.7",
        "infection/infection": "^0.13",
        "vimeo/psalm": "^3.12",
        "fzaninotto/faker": "^1.9",
        "mindplay/composer-locator": "^2.1",
        "php-parallel-lint/php-console-highlighter": "^0.5.0",
        "phpunit/php-invoker": "^2.0"
    },
    "require-dev": {
        "roave/security-advisories": "@dev",
        "sensiolabs/security-checker": ">2",
        "hirak/prestissimo": "^0.3.10"
    },
    "autoload": {
        "psr-4": {
            "SebastianKnott\\DevUtils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SebastianKnott\\DevUtils\\Test\\": "test/"
        }
    },
    "scripts": {
        "sca" : "vendor/bin/parallel-lint -e php --exclude vendor . && vendor/bin/phpcs --standard=SebastianKnott src test && vendor/bin/phpmd src,test text ./config/phpmd/phpmd.xml && vendor/bin/phpcpd src",
        "fix" : "vendor/bin/phpcbf --standard=SebastianKnott src test",
        "test": "vendor/bin/phpunit"
    }
}
